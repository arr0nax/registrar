<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/styles.css" type="text/css">
    </head>
    <body class="student-body">
        <div class="container-fluid">
            <h1>{{student.getName}}</h1>
            <h2>Current Courses</h2>
            <ul>
                {% for course in student.getCourses %}
                    <li>{{course.getName}}</li>
                {%endfor%}
            </ul>
            <h2>Update Name</h2>
            <form class="" action="/student/{{student.getId}}/edit" method="post">
                <input type="hidden" name="_method" value="patch">
                <label for="name">Name: </label>
                <input type="text" name="name" value="{{student.getName}}">
            <h2>Update Courses</h2>
                {% for course in courses %}
                    <input type="checkbox" name='{{course.getId}}' value="{{course.getId}}">
                    <label for="{{course.getName}}">{{course.getName}}</label>
                {% endfor %}
                <button class="btn" type="submit" name="button">DOIT</button>
            </form>

            <a href="/"><button class="btn">Home</button></a>
        </div>
        <div class="fire">

        </div>
    </body>
</html>
