<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/styles.css" type="text/css">
    </head>
    <body class="course-body">
        <div class="container-fluid">
            <h1>{{course.getName}}</h1>
            <h2>Current Students</h2>
            <ul>
                {% for student in course.getStudents %}
                    <li>{{student.getName}}</li>
                {%endfor%}
            </ul>
            <h2>Update Name</h2>
            <form class="" action="/course/{{course.getId}}/edit" method="post">
                <input type="hidden" name="_method" value="patch">
                <label for="name">Name: </label>
                <input type="text" name="name" value="{{course.getName}}">
            <h2>Update students</h2>
                {% for student in students %}
                    <input type="checkbox" name='{{student.getId}}' value="{{student.getId}}">
                    <label for="{{student.getName}}">{{student.getName}}</label>
                {% endfor %}
                <button class="btn" type="submit" name="button">DOIT</button>
            </form>

            <a href="/"><button class="btn">Home</button></a>
        </div>
        <div class="fire">

        </div>
    </body>
</html>
